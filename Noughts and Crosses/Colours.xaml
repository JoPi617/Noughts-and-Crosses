<UserControl x:Class="Noughts_and_Crosses.Colours"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Noughts_and_Crosses"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Slider x:Name="sldR" Grid.Row="0" Maximum="255" SmallChange="1" ValueChanged="Value_Changed"/>
        <Slider x:Name="sldG" Grid.Row="1" Maximum="255" SmallChange="1" ValueChanged="Value_Changed"/>
        <Slider x:Name="sldB" Grid.Row="2" Maximum="255" SmallChange="1" ValueChanged="Value_Changed"/>

    </Grid>
</UserControl>
