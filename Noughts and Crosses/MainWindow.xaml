<Window x:Class="Noughts_and_Crosses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noughts_and_Crosses"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height ="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:UserControl1 x:Name="BrdMain" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>

        
        <Label x:Name ="lblWin" Grid.Row="1" Grid.Column="1"/>
        <Image x:Name="imgTurn" Grid.Row="0" Grid.Column="1" Source= "Resources/Cross.png" Stretch="Fill" IsEnabled="False" />
        
    </Grid>
</Window>
