<UserControl x:Class="Noughts_and_Crosses.Symbols"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Noughts_and_Crosses"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:Symbols x:Key="Symbols"/>
        <!--CollectionViewSource 
                Source="{Binding Source={x:Static Application.Current} Path="   
                x:Key="listingDataView" /-->
    </UserControl.Resources>
    <Grid>
        <Viewbox>
            <ComboBox IsReadOnly="True" DataContext="{Binding Source={StaticResource Symbols}, Path=Source}"/>
        </Viewbox> 
    </Grid>
</UserControl>
